#!/usr/bin/env bash
set -euo pipefail

BIN_DIR=$(dirname $(realpath "$0"))

VERSION=0.6.3

if [[ ! -f "$BIN_DIR/.cache/crdoc" ]]; then
    printf "downloading crdoc %s ..." "$VERSION" 1>&2
    mkdir -p "$BIN_DIR/.cache"
    GOBIN="$BIN_DIR/.cache" CGO_ENABLED=0 go install "fybrik.io/crdoc@v$VERSION" &> /dev/null
    chmod +x "$BIN_DIR/.cache/crdoc"
    echo " done." 1>&2
fi

# shellcheck disable=SC2086
"$BIN_DIR"/.cache/crdoc $*