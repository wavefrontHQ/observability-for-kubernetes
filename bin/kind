#!/usr/bin/env bash
set -euo pipefail

BIN_DIR=$(dirname $(realpath "$0"))

VERSION=0.20.0

if [[ ! -f "$BIN_DIR/.cache/kind" ]]; then
    printf "downloading kind %s ..." "$VERSION" 1>&2
    mkdir -p "$BIN_DIR/.cache"
    GOBIN="$BIN_DIR/.cache" CGO_ENABLED=0 go install "sigs.k8s.io/kind@v$VERSION" &> /dev/null
    chmod +x "$BIN_DIR/.cache/kind"
    echo " done." 1>&2
fi

# shellcheck disable=SC2086
"$BIN_DIR"/.cache/kind $*